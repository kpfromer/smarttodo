{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run --parallel start",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "test": "lerna run test",
    "format": "prettier --write .",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
    "generate": "lerna run generate",
    "build:frontend": "lerna run build --scope=@smarttodo/frontend",
    "test:frontend": "lerna run test --scope=@smarttodo/frontend",
    "test:backend": "lerna run test --scope=@smarttodo/backend",
    "build:backend": "lerna run build --scope=@smarttodo/backend",
    "heroku-postbuild": "yarn bootstrap && yarn build:backend"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "9.1.1",
    "@commitlint/config-conventional": "9.1.1",
    "@typescript-eslint/eslint-plugin": "3.7.1",
    "@typescript-eslint/parser": "3.7.1",
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jest-dom": "^3.1.6",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-testing-library": "^3.4.1",
    "husky": "4.2.5",
    "lerna": "3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "2.0.5",
    "typescript": "^3.9.7"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "proseWrap": "always",
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
